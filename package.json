{
  "name": "learning-nest-next",
  "version": "1.0.0",
  "description": "Learning project with NestJS, Next.js and GraphQL",
  "private": true,
  "scripts": {
    "dev:api": "pnpm --filter api dev",
    "dev:web": "pnpm --filter web dev",
    "dev": "concurrently \"pnpm:dev:api\" \"pnpm:dev:web\"",
    "debug:api": "pnpm --filter api debug",
    "debug:api:brk": "pnpm --filter api debug:brk",
    "debug:api:prod": "pnpm --filter api debug:prod",
    "build:api": "pnpm --filter api build",
    "build:web": "pnpm --filter web build",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "concurrently": "^9.1.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
