{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "lib": ["ES2022", "dom", "dom.iterable"],
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "allowJs": true,
    "paths": {
      "@canary/*": ["../../libs/*/src"]
    }
  },
  "compileOnSave": false,
  "exclude": ["node_modules", ".next", "dist"]
}
